<odoo>
    <report
        id="action_payment_report"
        model="payment.wizard"
        string="Reporte de Caja"
        report_type="qweb-pdf"
        name="estadopago.report_estado_pago"
        file="estadopago.report_estado_pago"
        menu="False"
    />
    <data>
        <template id="report_estado_pago">
            <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <!-- Contenido del informe -->
                    <div class="page">
                        <br /><br />
                        <h1>Informe de Estado de pagos</h1>
                        <p>Cliente: <span t-esc="doc.cliente.name"/></p>
                        <p>Facturas por vencer: <span t-esc="doc.fac_vencido"/></p>
                        <!-- Agrega aquí los otros campos que quieras mostrar -->
                        <ul>
                        <t t-foreach="doc.facturas_in" t-as="factura">
                            <li>
                                Número de Factura: <span t-esc="factura.sii_document_number"/>
                                Fecha de Vencimiento: <span t-esc="factura.date_due"/><br/>
                                <!-- Agrega más campos de la factura aquí -->
                            </li>
                        </t>
                        </ul>
                        <p>Facturas vencidas: <span t-esc="doc.pre_fac_vencido"/></p>
                        <!-- Agrega aquí los otros campos que quieras mostrar -->
                        <ul>
                        <t t-foreach="doc.facturas_out" t-as="factura">
                            <li>
                                Número de Factura: <span t-esc="factura.sii_document_number"/>
                                Fecha de Vencimiento: <span t-esc="factura.date_due"/><br/>
                                <!-- Agrega más campos de la factura aquí -->
                            </li>
                        </t>
                        </ul>
                    </div>
                </t>
            </t>
            </t>
        </template>
    </data>
</odoo>
