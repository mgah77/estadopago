        <template id="report_estado_pago">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <!-- Contenido del informe -->
                    <div class="page">
                        <h1>Informe de Pagos</h1>
                        <p>Cliente: <span t-field="doc.cliente.name"/></p>
                        <p>Facturas Vencidas: <span t-field="doc.fac_vencido"/></p>
                        <!-- Agrega aquÃ­ los otros campos que quieras mostrar -->
                    </div>
                </t>
            </t>
