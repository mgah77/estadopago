<odoo>
    <report
        id="action_payment_report"
        model="payment.wizard"
        string="Reporte de Caja"
        report_type="qweb-pdf"
        name="estadopago.report_estado_pago"
        file="estadopago.report_estado_pago"
        menu="False"
    />
    <data>
        <template id="report_estado_pago">
            <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <!-- Contenido del informe -->
                    <div class="page">
                        <br /><br />
                        <h1>Informe de Estado de pagos</h1>
                        <p>Cliente: <span t-esc="doc.cliente.name"/></p>
                        <p>Facturas Vencidas: <span t-esc="doc.fac_vencido"/></p>
                        <!-- Agrega aquí los otros campos que quieras mostrar -->
                        <t t-foreach="doc.facturas" t-as="factura">
                            <li>
                                Número de Factura: <span t-esc="factura.number"/><br/>
                                Fecha de Vencimiento: <span t-esc="factura.date_due"/><br/>
                                <!-- Agrega más campos de la factura aquí -->
                            </li>
                        </t>
                    </div>
                </t>
            </t>
            </t>
        </template>
    </data>
</odoo>
